<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <solid android:color="@color/Black" />
            <corners android:radius="2dp" />
            <stroke android:width="2dp" android:color="@color/DarkBlue" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="@color/RoyalBlue"
                android:centerColor="@color/LightBlue"
                android:endColor="@color/RoyalBlue"
                android:angle="90" />
            <corners android:radius="2dp" />
            <stroke android:width="2dp" android:color="@color/MidnightBlue" />
        </shape>
    </item>
</selector>
